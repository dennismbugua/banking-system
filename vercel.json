{
  "version": 2,
  "builds": [
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles"
      }
    },
    {
      "src": "banking_system/wsgi.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "15mb", 
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/(.*)",
      "dest": "banking_system/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "banking_system.settings"
  },
  "functions": {
    "banking_system/wsgi.py": {
      "maxDuration": 30
    }
  }
}